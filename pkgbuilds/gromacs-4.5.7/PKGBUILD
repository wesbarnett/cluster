# Maintainer: James W. Barnett <jbarnet4@tulane.edu>
# Not for use in AUR
pkgname=gromacs-4.5.7
pkgver=4.5.7
pkgrel=1
pkgdesc='A versatile package to perform molecular dynamics, i.e. simulate the Newtonian equations of motion for systems with hundreds to millions of particles.'
url='http://www.gromacs.org/'
license=("GPL")
arch=('i686' 'x86_64')
depends=('fftw' 'lesstif' 'perl' 'libxml2' 'libsm' 'libx11')
makedepends=('cmake')
options=('!libtool')
source=(ftp://ftp.gromacs.org/pub/gromacs/${pkgname}.tar.gz)
md5sums=('24febafaf51be785b1c755ef679bea08')
sha1sums=('f2fb59bcfb45043d8dd72122629fc23d7e2b800f')

build() {
  mkdir -p ${srcdir}/${pkgname}/build
  cd ${srcdir}/${pkgname}/build
  cmake .. \
        -DCMAKE_INSTALL_PREFIX=/usr/local/gromacs-$pkgver
  make
}

package() {

  msg2 "Making the single precision executables"

  cd ${srcdir}/${pkgname}/build
  make DESTDIR=${pkgdir} install

}
